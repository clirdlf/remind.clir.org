<section class="ftco-section bg-light">
  <div class="container">
    <div class="row no-gutters justify-content-center">
      <div class="col-md-12">
        <div class="wrapper">
          <div class="row g-0">
            <div class="col-lg-6">
              <div class="contact-wrap w-100 p-md-5 p-4">
                <h3>Contact us</h3>
                <p class="mb-4">
                  We're open for any suggestion or just to have a chat
                </p>
                <div class="row mb-4">
                  <div class="col-md-4">
                    <div class="dbox w-100 d-flex align-items-start">
                      <div class="text">
                        <p class="pb-4">
                          <span>Address:</span> 1800 Diagonal Road <br />
                          Suite 600<br />
                          Alexandria, VA 22314
                        </p>
                      </div>
                    </div>
                  </div>
                  <div class="col-md-4">
                    <div class="dbox w-100 d-flex align-items-start">
                      <div class="text">
                        <p>
                          <span>Email:</span>
                          <a href="mailto:info@yoursite.com">
                            {{ site.email }}
                          </a>
                        </p>
                      </div>
                    </div>
                  </div>
                  {#
                  <div class="col-md-4">

{# Macro function to render child items (submenus) #}
{% macro renderNavListDropdown(childEntry) -%}
<li>
    <a class="dropdown-item" href=" {{ childEntry.url | url }}">
    {{childEntry.title}}
    </a>
</li>
{%- endmacro %}


---
title: Posts
layout: base.njk
eleventyNavigation:
  hide: true
---
<section class="ftco-section bg-light ftco-no-pt">
  <div class="container-xl">
    <div class="row">
      {% for post in collections.posts | reverse %}
        {% set row_test =  loop.index % 2 == 0  %}
        {% set image_p = post.data.image_path | url %}

        <div class="col-md-12 blog-entry d-flex align-items-stretch">
          <div class="col-md-7 {{ '' if row_test else 'order-md-last' }}">
            <div
              class="img rellax"
              data-rellax-speed="-5"
              data-rellax-min="-120"
              data-rellax-max="0"
              style="background-image: url({{ image_p }}); transform: translate3d(0px, -103px, 0px);">
            </div>
          </div>
          <div class="col-md-5">
            <div class="text py-5 ps-md-5 my-lg-5">
              <h2 class="mb-4">
                <a href="{{ post.url | url }}">{{ post.data.title }}</h2></a>
            </div>
            <p class="mb-4">
              {% excerpt post %}
            </p>
            <p>
              <a href="{{ post.url | url }}" class="btn-custom"
                >Learn More
                <span class="bi bi-arrow-right ms-2"></span
              ></a>
            </p>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</section>
